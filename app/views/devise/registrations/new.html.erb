<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <h2 class="text-center">Sign up</h2>
    <%= f.input :firstname, required: true, autofocus: true, label: false, placeholder: "Firstname"  %>
    <%= f.input :lastname, required: true, autofocus: true, label: false, placeholder: "Lastname"  %>
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email"  %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) , label: false, placeholder: "Password" %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirm Password" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

