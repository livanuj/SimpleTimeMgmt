<%= simple_form_for(@user) do |f| %>
  <%#= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :project %>
    
    <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}) %>
   
    <%#= f.input :description %>
  </div>

  <div class="form-actions">
  <br />
    <%= f.button :submit %>
  </div>
<% end %>
